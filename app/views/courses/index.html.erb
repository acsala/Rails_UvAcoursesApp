<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ects</th>
      <th>Institute</th>
      <th>Programme</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.Name %></td>
        <td><%= course.Ects %></td>
        <td><%= truncate(course.Institute) %></td>
        <td><%= truncate(course.Programme) %></td>
        <!--<td><%= course.Description %></td>
        <!--This line is going to truncate the Descreptuon of courses-->
        <td><%= truncate(course.Description) %></td>
        
        <!--The default HTTP method for a link is a get, the default HTTP method for a button is a post, and Rails uses these conventions to 		     					determine which method to call.-->
        <td><%= button_to 'Add to Cart', line_courses_path(:course_id => course) %></td>
        <!--<td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

